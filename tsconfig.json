{
  "include": ["src", "__tests__", "src/custom.d.ts"],
  "compilerOptions": {
    "outDir": "dist",
    "target": "ES2020",
    "moduleResolution": "Bundler",
    "strict": true,
    "skipLibCheck": true,
    "declaration": false,
    "sourceMap": false,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "jsx":"react-jsx", 
    "paths": {
      "@/*": ["./src/*"]
    }
  }
}
